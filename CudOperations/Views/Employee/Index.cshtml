@model IEnumerable<Empolyee>

@{
    ViewData["Title"] = "Employees";
}

<h2>Employees</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Department?.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-outline-info">Edit</a> --||--
                    <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-outline-primary">Create New Employee</a>
